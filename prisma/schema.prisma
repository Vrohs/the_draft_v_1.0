generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id
  email     String   @unique
  scripts   Script[]
  createdAt DateTime @default(now())
}

model Script {
  id        Int      @id @default(autoincrement())
  title     String
  content   Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}
